<div class="container">
  <h1 class="my-2">New Game</h1>
  <ul class="list-group list-group-horizontal">
    <% @letters.each do |letter| %>
    <li class="list-group-item"><p><%= letter %></p></li>
    <% end %>
  </ul>
  <form action="/score" method="post" data-turbo="false" class="mt-3">
    <label for="answer" class="mt-2">What is the longest word you can find?</label>
    <div class="d-flex align-items-center gap-2 mt-3">
      <input type="text" id="answer" name="answer" class="form-control" style="width: auto;">
      <button type="submit" value="Answer" class="btn btn-primary">Check Results</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join('') %>
  </form>
</div>
